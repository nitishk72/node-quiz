<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../../partials/header'); %>
  </header>

  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-9 col-lg-7">
        <form action="/professor/quiz/create" method="post">
          <div class="card">
            <div class="card-header">
              Create Quiz
            </div>
            <div class="card-body">
              <div class="form-group row">
                <label class="col-md-4 col-form-label text-md-right" for="name">Name</label>
                <div class="col-md-8">
                  <input type="text" id="name" class="form-control" name="name" placeholder="Quiz Name" required="">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-md-4 col-form-label text-md-right" for="name">Description</label>
                <div class="col-md-8">
                  <textarea id="description" class="form-control" name="description" placeholder="Quiz Description"
                    rows="7" required=""></textarea>
                </div>
              </div>
              <div class="form-group row mb-0">
                <div class="col-md-8 offset-md-4">
                  <button class="btn btn-primary btn-block" type="submit">Create</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>

  <footer>
    <%- include('../../partials/footer'); %>
  </footer>

</body>

</html>